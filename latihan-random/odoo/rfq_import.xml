 <xpath expr="//t[@t-raw='0']" position="before">
            <div t-if="request.httprequest.path.startswith('/my/rfq')" class="modal fade" id="modal_import_rfq_document"
                 tabindex="-1" role="dialog" aria-labelledby="importLabel" aria-hidden="true">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Import RFQ Document</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&#215;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-info">
                                <strong>Note:</strong> This import will only update the Quantity and Unit Price of existing RFQ products.
                                <ul class="mt-2 mb-0">
                                    <li>Required columns: RFQ Number, Product, Quantity, Unit Price</li>
                                    <li>For multi-sheet Excel files, you will be prompted to select a sheet</li>
                                </ul>
                            </div>
<!--                            <div class="mt-3">-->
<!--                                <a href="/equip3_purchase_vendor_portal/static/src/files/rfq_import_template.xlsx" class="btn btn-link">-->
<!--                                    <i class="fa fa-download"></i> Download Template-->
<!--                                </a>-->
<!--                            </div>-->
                            <div class="mt-3">
                                <span class="btn btn-maroon btn-sm">
                                    <i class="fa fa-upload"></i> Select File
                                    <input type="file" accept=".xlsx,.xls,.csv" class="vendor_pricelist_import" style="opacity: 0; position: absolute; left: 0; top: 0; width: 100%; height: 100%; cursor: pointer;"/>
                                </span>
                                <span class="selected-filename ml-2" style="display: inline-block; max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
